void main() {

    int y = readInteger("Indiquez est la valeur de y");

    for (int x = 0; x < y; x++) {
        clear();
        for (int i = 0; i < x; i++) {
            print('-');
        }

        print('|');

        for (int i = 0; i < y - x - 1; i++) {
            print('-');
        }

        sleep(1000);
    }
}
